<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:isScrollContainer="true">
    
    <TableLayout android:layout_width="wrap_content" android:id="@+id/tableLayout1" android:layout_height="match_parent" android:scrollbars="vertical" android:scrollbarAlwaysDrawVerticalTrack="true">
    </TableLayout>
       <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Comentários do Bandeijão" android:id="@+id/txtTitulo" android:gravity="center_horizontal" android:background="#0000FF" android:textColor="#ffffff" android:textStyle="bold"></TextView>
       <TextView android:layout_height="wrap_content" android:text="Sem comentários publicados." android:layout_width="wrap_content" android:id="@+id/txtComentarios" android:textColor="#ffffff"></TextView>
		<ListView android:id="@+id/listacomentarios"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  
		/>	
	
	
</LinearLayout>
</ScrollView>