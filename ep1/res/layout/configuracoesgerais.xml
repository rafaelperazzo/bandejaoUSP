<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="match_parent" android:layout_width="match_parent">
        <TextView android:id="@+id/textView1" android:text="Configurações" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:background="#0000FF" android:textColor="#ffffff" android:textStyle="bold"></TextView>
        <TextView android:id="@+id/textView2" android:text="Servidor Bandejão" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#ffffff"></TextView>
        <TableRow android:id="@+id/tableRow1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="textShortMessage"
        android:imeOptions="flagNoEnterAction"
        android:maxLines="1"
        android:maxLength="100"
        android:id="@+id/txtServidor"/>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="Salvar" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/btnSalvar"></Button>
            <Button android:text="Cancelar" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/btnCancelar"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>
